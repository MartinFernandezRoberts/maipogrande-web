<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Procesar</servlet-name>
        <servlet-class>servlets.Procesar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcesarAgregarAlCarro</servlet-name>
        <servlet-class>servlets.ProcesarAgregarAlCarro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CargarCatalogo</servlet-name>
        <servlet-class>servlets.CargarCatalogo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcesarVerCarro</servlet-name>
        <servlet-class>servlets.ProcesarVerCarro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcesarEliminarDelCarro</servlet-name>
        <servlet-class>servlets.ProcesarEliminarDelCarro</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Procesar</servlet-name>
        <url-pattern>/procesar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcesarAgregarAlCarro</servlet-name>
        <url-pattern>/procesar-agregar-al-carro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CargarCatalogo</servlet-name>
        <url-pattern>/procesar-cargar-catalogo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcesarVerCarro</servlet-name>
        <url-pattern>/procesar-ver-carro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcesarEliminarDelCarro</servlet-name>
        <url-pattern>/procesar-eliminar-del-carro</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
